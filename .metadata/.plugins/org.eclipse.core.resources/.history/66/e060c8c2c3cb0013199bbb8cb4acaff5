var win = Ti.UI.createWindow({
	title: "Image Gallery",
	backgroundColor: "#f5f5f5",
	layout: "horizontal"
});

for (var i=0; i< Image.src_files.length; i++){
	var imageWrapper = Ti.UI.createView({
		borderRadius: 5,
		top: 15,
		left: 15,
		width: 75,
		height: 75,
		backgroundColor: "#fff",
		layout:"vertical"
	});
	var aImage = Ti.UI.createImageView({
		image: "Image/GroupAnime.jpg",
		caption: "Naruto Family"
	});
	imageWrapper.add(aImage);
	win.add(imageWrapper);
}


win.open();
