var win = Ti.UI.createWindow({
	title: "Image Gallery",
	backgroundColor: "#f5f5f5",
	layout: "horizontal"
});

var pWidth = Ti.Platform.displayCaps.platformWidth;

var pHeight = Ti.Platform.displayCaps.platformHeight;

var border = Ti.UI.createView({
    backgroundColor: "#cecece",
    height: 1,
    width: pWidth,
    top: 20
});

var viewContainer = Ti.UI.createScrollView({
	top: 0,
	layout: "horizontal",
	width: pWidth,
	contentWidth: pWidth,
	height: pHeight-border.height-border.top,
	showVerticalScrollIndicator: true,
	backgroundColor: "#fef"
});

for (var i=0, j=30; i<j; i++){
	var imageWrapper = Ti.UI.createView({
		borderRadius: 5,
		top: 15,
		left: 15,
		width: 75,
		height: 75,
		backgroundColor: "#fff",
		layout:"vertical"
	});
	var aImage = Ti.UI.createImageView({
		image: "Image/GroupAnime.jpg",
		caption: "Naruto Family"
	});
	imageWrapper.add(aImage);
	win.add(imageWrapper,viewContainer);
}


win.open();
