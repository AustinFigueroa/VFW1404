Ti.UI.setBackgroundColor("#000");

var mainWindow = Ti.UI.createWindow({
	
	backgroundColor: "#fff"
});

var myFirstView = Ti.UI.createView({
	backgroundColor: "#fff",
	borderColor: "#fff",
	borderRadius: 5,
	borderWidth: 1,
	top: 30,
	left: 20,
	right: 20,
	bottom: 160
});

mainWindow.add(myFirstView);
mainWindow.open();
