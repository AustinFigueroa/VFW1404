Titanium.UI.setBackgroundColor('#000');

var combatStyles = [{title: "Fireball"}, {title: "Shock"}, {title: "Ice Storm"}, {title: "Vortex"}, {title: "Force Push"}, {title: "Blades"}, {title: "Swords"}, {title:"Hammers"}, {title: "Pistols"}, {title: "Rifles"}];

var mainWindow = Ti.UI.createWindow({
	backgroundColor: "#f5f5f5"
});

var titleView = Ti.UI.createView({
	height: 65,
	backgroundColor: "#fff",
	top: 0
});

var border = Ti.UI.createView({
	backgroundColor: "#dbdbdb",
	height: 1,
	top: titleView.height + titleView.top
});

var titleLabel = Ti.UI.createLabel({
	text: "Different Ways of Combat",
	font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold"},
	top: 30,
	width: "100%",
	textAlign: "center"
});

var combatTables = Ti.UI.createTableView({
	data: combatStyles,
	top: border.top + border.height,
	font: {fontSize: 12, fontFamily: "Arial"}
});

if(Ti.Platform.name === "iPhone OS"){
	combatTables.style = Ti.UI.iPhone.TableViewStyle.GROUPED;
}

titleView.add(titleLabel);
mainWindow.add(titleView, border, combatTables);
mainWindow.open();
