Ti.UI.setBackgroundColor("#000");

var mainWindow = Ti.UI.createWindow({
	
	backgroundColor: "#fff",
	backgroundImage: "CustomBG.png",
	backgroundRepeat: true
});

var myFirstView = Ti.UI.createView({
	backgroundColor: "#fff",
	borderColor: "#000",
	borderRadius: 5,
	borderWidth: 1,
	top: 30,
	left: 20,
	right: 20,
	bottom: 120
});

mainWindow.add(myFirstView);
mainWindow.open();
